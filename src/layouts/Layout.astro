---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/meros_icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="">
    <slot />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }
  @font-face {
    font-family: 'Skere';
    src: url('/Skere.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Hitchcut';
    src: url('/Hitchcut.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Bernier';
    src: url('/Bernier.otf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Codec';
    src: url('/Codec.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Edmund';
    src: url('Edmund.otf') format('truetype');
    font-weight: normal;
    font-style: normal;
  }

  body {
    background-image: url('/main.webp');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 100vh;
  }

  html {
    scrollbar-color: #f2f2f2 #2e2e2e;
    scrollbar-width: thin;
  }

  .merost_title {
    color: #ed0505;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    -webkit-text-stroke: 2px #fff;
  }

  @media only screen and (max-width: 600px) {
    html {
      scrollbar-width: none;
    }
  }
</style>
